@model KDC.DL.Models.MS_VisaStampingCountry

@{
    ViewBag.Title = "Create";
}

<section class="content-header">
    <h1>
        Add Visa Stamping Country
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Index", "VisaStampingCountry")"><i class="fa fa-arrow-left"></i> List </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.CountryName, "Country Name", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.CountryCode, "Country Code", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.CountryCode, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.CountryCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <input type="submit" id="btn" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>