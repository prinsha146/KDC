@model KDC.DL.Models.MS_JobProfession

@{
    ViewBag.Title = "Edit";
}

<section class="content-header">
    <h1>
        Edit Job Profession
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Index", "JObProfession")"><i class="fa fa-arrow-left"></i> List </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.JobProfessionId)

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.JobProfessionName, "Job Profession Name", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.JobProfessionName, new { @class = "form-control", @required = "required" })
                        <span class="text-danger" id="errormsg"></span>
                        @Html.ValidationMessageFor(model => model.JobProfessionName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Active, "Is Active?", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.RadioButtonFor(model => model.Active, true, new { @checked = "checked" }) Yes &nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.Active, false) No
                        @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <input type="submit" id="btn" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>