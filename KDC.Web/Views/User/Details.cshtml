@model KDC.DL.Models.SC_User

@{
    ViewBag.Title = "Details";
}

<section class="content-header">
    <h1>
        User Details
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Index", "User")"><i class="fa fa-arrow-left"></i> List </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="form-horizontal">

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.FullName, "Full Name", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Email, "Email", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.UserName, "Username", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.UserType, "User Type", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.UserType, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.EnteredDate, "Entered Date", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.EnteredDate,"{0 : yyyy/MM/dd}", new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.EnteredDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.RegKey, "Registration Key", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.RegKey, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.RegKey, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.IsActive, "Is Active?", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @if (Model.IsActive == true)
                        {
                            <span class="label label-success">Active</span>
                        }
                        else
                        {
                            <span class="label label-danger">Inactive</span>
                        }
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>