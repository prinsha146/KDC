@model IEnumerable<KDC.DL.Models.SC_User>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        Users List
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Create", "User")"><i class="fa fa-plus-circle"></i> Add </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="table-responsive">
                <table id="example" class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Full Name")</th>
                            <th>@Html.DisplayName("User Name")</th>
                            <th>@Html.DisplayName("User Type")</th>
                            <th>@Html.DisplayName("Entered Date")</th>
                            <th>@Html.DisplayName("Registration Key")</th>
                            <th>@Html.DisplayName("Is Active?")</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserType)
                            </td>

                            <td>
                                @(item.EnteredDate != null ? ((DateTime)item.EnteredDate).ToString("yyyy/MM/dd") : "")
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.RegKey)
                            </td>

                            @if (item.IsActive == true)
                            {
                                <td><span class="label label-success">Active</span></td>
                            }
                            else
                            {
                                <td><span class="label label-danger">Inactive</span></td>
                            }
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.UserId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                                @Html.ActionLink(" ", "Details", new { id = item.UserId }, new { @class = "fa fa-list text-success", title = "Details" }) |
                                <a href="@Url.Action("Delete", "User", new { @id = item.UserId})" onclick='return confirmDelete();'><span class="fa fa-trash text-danger"></span></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
	function confirmDelete() {
		return confirm('Are you sure you want to delete this?');
	}
</script>