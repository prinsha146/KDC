@model KDC.DL.Models.MS_OrganizationSetup

@{
    ViewBag.Title = "Create";
}

<section class="content-header">
    <h1>
        Add Organization
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Index", "OrganizationSetup")"><i class="fa fa-arrow-left"></i> List </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.OrganizationName, "Organization Name", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.OrganizationName, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.OrganizationName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Address, "Address", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Contact, "Contact", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Contact, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Email, "Email", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Website, "Website", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Website, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Fax, "Fax", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.PAN, "PAN", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.PAN, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.PAN, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.GccCodeNo, "GCC Code", new { @class = "control-label" })
                        <span class="text-danger">*</span>
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.GccCodeNo, new { @class = "form-control", @required = "required" })
                        <span class="text-danger" id="errormsg"></span>
                        @Html.ValidationMessageFor(model => model.GccCodeNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.IsActive, "Is Active?", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.RadioButtonFor(model => model.IsActive, true, new { @checked = "checked" }) Yes &nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.IsActive, false) No
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <input type="submit" id="btn" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>

