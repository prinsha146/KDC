    function rateamount(i) {
        if ($('#ItemId-' + i).val() == i) {
            var service = $('#ItemName-' + i).val();
            //alert(service);
            $.ajax({
                data: { id: service },
                type: "POST",
                url: '@Url.Action("RateAmount", "PatientBilling")',
                success: function (response) {
                    var rate = response;
                    //alert(rate);
                    document.getElementById('ItemRate-' + i).value = rate;
                    document.getElementById('ItemAmount-' + i).value = rate;
                    calAmount();
                }
            });

        }
    }


        function isUnique() {
            var a = $('#ItemName-' + [itemindex - 1] + '').val();
            if ($('#ItemId-' + [itemindex - 1] + '').val() > 1)
            {
                for (var i = 1; i < itemindex-1; i++) {
                   // var index = itemindex - 1;

                    var x = $('#ItemName-' + i + '').val();
                    if (a == x) {
                        $('#btn').attr("disabled", "disabled");
                        alert("Item already listed!!");
                    }
                    else {
                        $('#btn').removeAttr("disabled");
                    }
                }
            }

    }


        $('#discount').blur(function () {
            var discount = $('#discount').val();
            var amount = $('#totalAmount').val();
            var net = 0;
            var dis = 0;
            if (discount > 0) {
            	dis = (discount / 100) * amount;
            	net = amount - dis;
            	var roundValue = Math.round(net);

            	document.getElementById('net').value = roundValue;
            }
            
            if (discount <= 0) {
            	net = amount;
            	document.getElementById('net').value = net;
            }
            
        });


        function calNet()
        {
        	var discount = $('#discount').val();
        	var amount = $('#totalAmount').val();
        	var net = 0;
        	var dis = 0;
        	if (discount > 0) {
        		dis = (discount / 100) * amount;
        		net = amount - dis;
        		var roundValue = Math.round(net);

        		document.getElementById('net').value = roundValue;
        	}

        	if (discount <= 0) {
        		net = amount;
        		document.getElementById('net').value = net;
        	}
        }

        $('#tender').blur(function () {
            var tender = $('#tender').val();
            var net = $('#net').val();
            var change = 0;

            if (tender >= net) {
                $('#btn').removeAttr("disabled");
                change = tender - net;
            }
            else {
                alert("Tender not sufficient!!");
                $('#btn').attr("disabled", "disabled");
            }

            document.getElementById('change').value = change;
        });

