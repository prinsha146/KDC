@model KDC.DL.Models.CD_Candidate
@{
	ViewBag.Title = "GenerateRVNoToday";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
	<h1>Generate RV No</h1>
	<ol class="breadcrumb">
		<li class="list"><a href="@Url.Action("Index", "Candidate")"><i class="fa fa-arrow-left"></i> List </a></li>
	</ol>
</section>

<section class="content">
	<div class="box box-primary">
		<div class="box-body">

			@using (Html.BeginForm())
			{
				<div class="col-sm-12">
					<div class="col-sm-2">
						@Html.Label("Date:", new { @class = "label-control" })
					</div>
					<div class="col-sm-3">
						@*@Html.TextBox("Date", new { @class = "form-control EngDate" })*@
						<input type="date" class="form-control EngDate" id="Date" name="Date" value="@DateTime.Today.ToString("yyyy-MM-dd")"/>
					</div>
				</div>

				<div class="form-group">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="form-group col-sm-3">
						<div class="col-md-offset-2 ">
							<input type="submit" value="Generate" class="btn btn-primary" />
						</div>
					</div>
				</div>
			}

			
		</div>
	</div>
</section>
