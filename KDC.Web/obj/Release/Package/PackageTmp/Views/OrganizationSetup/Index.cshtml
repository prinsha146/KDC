@model IEnumerable<KDC.DL.Models.MS_OrganizationSetup>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        Organization List
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Create", "OrganizationSetup")"><i class="fa fa-plus-circle"></i> Add </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="table-responsive">
                <table id="example" class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Organization Name")</th>
                            <th>@Html.DisplayName("Address")</th>
                            <th>@Html.DisplayName("Contact")</th>
                            <th>@Html.DisplayName("GCC No")</th>
                            <th>@Html.DisplayName("Active")</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrganizationName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GccCodeNo)
                                </td>
                                <td>
                                    @if (item.IsActive == true)
                                    {
                                        <span class="label label-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.OrganizationId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                                    @Html.ActionLink(" ", "Details", new { id = item.OrganizationId }, new { @class = "fa fa-list text-success", title = "Details" }) |
                                    <a href="@Url.Action("Delete", "OrganizationSetup", new { @id = item.OrganizationId })" onclick='return confirmDelete();'><span class="fa fa-trash text-danger"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
	function confirmDelete() {
		return confirm('Are you sure you want to delete this?');
	}
</script>
