@model IEnumerable<KDC.DL.Models.MS_RecruitingAgency>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
	<h1>
		Recruiting Agency List
	</h1>
	<ol class="breadcrumb">
		<li class="list"><a href="@Url.Action("Create", "RecruitingAgency")"><i class="fa fa-plus-circle"></i> Add </a></li>
	</ol>
</section>
<section class="content">
	<div class="box">
		<div class="box-body">
			<div class="table-responsive">
				<table id="example" class="table table-bordered">
					<thead>
						<tr>
							<th>
								@Html.DisplayName("Recruiting Agency Name")
							</th>
							<th>
								@Html.DisplayName("Code")
							</th>
							<th>
								@Html.DisplayNameFor(model => model.NAFEA)
							</th>
							<th>
								@Html.DisplayName("Director Name")
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Address)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Phone)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Fax)
							</th>
							<th class="col-sm-1">Action</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.RecruitingAgencyName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CODE)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.NAFEA)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.DirectorName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Address)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Phone)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Fax)
								</td>
								<td>
									@Html.ActionLink(" ", "Edit", new { id = item.RecruitingAgencyId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
									@Html.ActionLink(" ", "Details", new { id = item.RecruitingAgencyId }, new { @class = "fa fa-list text-success", title = "Details" }) |
									@Html.ActionLink(" ", "Delete", new { id = item.RecruitingAgencyId }, new { @class = "fa fa-trash-o text-danger", title = "Delete" })
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>
