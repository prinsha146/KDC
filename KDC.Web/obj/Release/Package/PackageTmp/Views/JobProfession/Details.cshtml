@model KDC.DL.Models.MS_JobProfession

@{
    ViewBag.Title = "Details";
}


<section class="content-header">
    <h1>
        Job Profession Details
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Index", "Job Profession")"><i class="fa fa-arrow-left"></i> List </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="form-horizontal">

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.JobProfessionName, "Job Profession Name", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.JobProfessionName, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.JobProfessionName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Active, "Is Active?", new { @class = "control-label" })
                    </div>
                    <div class="col-sm-3">
                        @if (Model.Active == true)
                        {
                            <span class="label label-success">Active</span>
                        }
                        else
                        {
                            <span class="label label-danger">Inactive</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
