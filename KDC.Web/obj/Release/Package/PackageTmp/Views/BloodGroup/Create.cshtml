@model KDC.DL.Models.MS_BloodGroupRH

@{
    ViewBag.Title = "Create";
}

<section class="content-header">
    <h1>
        Add Blood Group
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Index", "BloodGroup")"><i class="fa fa-arrow-left"></i> List </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group col-sm-12">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.BloodGroupName, "Blood Group Name", new { @class = "control-label" })
                            <span class="text-danger">*</span>
                        </div>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.BloodGroupName, new { @class = "form-control", @required = "required" })
                            <span class="text-danger" id="errormsg"></span>
                            @Html.ValidationMessageFor(model => model.BloodGroupName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm-12">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2">
                            <input type="submit" id="btn" value="Save" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>