@model IEnumerable<KDC.DL.Models.MS_VaccinationBatch>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
<h1>
    Vaccination Batch List
</h1>
<ol class="breadcrumb">
    <li class="list"><a href="@Url.Action("Create", "VaccinationBatch")"><i class="fa fa-plus-circle"></i> Add </a></li>
</ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="table-responsive">
                <table id="example" class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Details)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Manufacturer)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BatchNo)
                            </th>
                            <th>
                                Date Of Manufacture
                            </th>
                            <th>
                                Date Of Expiry
                            </th>
                            <th>
                                Vaccination Type
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Details)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Manufacturer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BatchNo)
                                </td>
                                <td>
                                    @(item.DateOfManufacture != null ? ((DateTime)item.DateOfManufacture).ToString("yyyy/MM/dd") : "")
                                </td>
                                <td>
                                    @(item.DateOfExpiry != null ? ((DateTime)item.DateOfExpiry).ToString("yyyy/MM/dd") : "")                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VaccinationTypeName)
                                </td>
                                
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.VaccinationBatchId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                                    <a href="@Url.Action("Delete", "VaccinationBatch", new { @id = item.VaccinationBatchId })" onclick='return confirmDelete();'><span class="fa fa-trash text-danger"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this?');
    }
</script>