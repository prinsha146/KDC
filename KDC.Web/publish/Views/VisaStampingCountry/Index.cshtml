@model IEnumerable<KDC.DL.Models.MS_VisaStampingCountry>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        Visa Stamping Country List
    </h1>
    <ol class="breadcrumb">
        <li class="list"><a href="@Url.Action("Create", "VisaStampingCountry")"><i class="fa fa-plus-circle"></i> Add </a></li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="table-responsive">
                <table id="example" class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Country Name")</th>
                            <th>@Html.DisplayName("Country Code")</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CountryCode)
                            </td>

                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.CountryId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                                <a href="@Url.Action("Delete", "VisaStampingCountry", new { @id = item.CountryId})" onclick='return confirmDelete();'><span class="fa fa-trash text-danger"></span></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this?');
    }
</script>